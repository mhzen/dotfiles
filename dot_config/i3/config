# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

#############################
# --> vars
#############################

# Mod4 = Win key
set $mod Mod4
set $term ghostty

#############################
# --> startups
#############################

# xdg-autostart: dex
exec --no-startup-id dex --autostart --environment i3

exec --no-startup-id picom
exec --no-startup-id dunst
exec --no-startup-id sleep 1 && feh --bg-fill --randomize ~/.local/share/wallpapers/*
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --blur 10 --nofork
exec --no-startup-id xsettingsd
exec --no-startup-id greenclip daemon

exec --no-startup-id nm-applet
# exec --no-startup-id vicinae server

#############################
# --> behavioural settings 
#############################

# default (tiling), stacked, or tabbed
workspace_layout tabbed

new_window pixel 1
gaps inner 6
gaps outer 3

# auto floats shit
for_window [class="^pavucontrol"] floating enable, move position cursor
for_window [class="^vicinae"] floating enable
for_window [class="blueman-manager"] floating enable
for_window [class="nm-connection-editor"] floating enable
for_window [class="qalculate-gtk"] floating enable

#############################
# --> bindings: navigation
#############################

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# emulate alt-tab
bindsym $mod+Tab focus left
bindsym $mod+Shift+Tab focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in orientation (B)orizontal
bindsym $mod+b split h

# split in orientation vertical
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'le kil i3??' -B 'fuck yea' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

#############################
# --> bindings: launching
#############################

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

bindsym $mod+p exec flameshot gui
bindsym $mod+Return exec $term
bindsym $mod+q kill
# bindsym $mod+d exec --no-startup-id vicinae vicinae://toggle
bindsym $mod+d exec --no-startup-id rofi -show
bindsym $mod+Shift+v exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

set $volumepath ~/.local/bin/volume
set $volumestep 5
bindsym XF86AudioRaiseVolume exec --no-startup-id $volumepath -n up $volumestep
bindsym XF86AudioLowerVolume exec --no-startup-id $volumepath -n down $volumestep
bindsym XF86AudioMute        exec --no-startup-id $volumepath -n mute
# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
# bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
# bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

#############################
# --> appearance
#############################

font pango:Adwaita Mono 8

# palette vars
set $bg             #1e1e1e
set $bg_alt         #232323
set $border_muted   #2a2a2a

set $fg_inactive    #8c8c8c
set $fg_visible     #b0b0b0
set $fg_active      #ffffff
set $urgent         #e66157
set $mode_orange    #ffb84c
 
# window colors
# class                 border         background     text          indicator      child_border
client.focused          $fg_visible    $bg            $fg_active    $fg_active     $fg_visible
client.focused_inactive $border_muted  $bg            $fg_visible   $border_muted  $border_muted
client.unfocused        $border_muted  $bg            $fg_inactive  $border_muted  $border_muted
client.urgent           $urgent        $bg            $fg_active    $urgent        $urgent
client.placeholder      $border_muted  $bg            $fg_visible   $border_muted  $border_muted

# Optional: make new/unknown windows look consistent
client.background       $bg

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:Adwaita Mono, Symbols Nerd Font 10
    position top
    status_command i3status-rs
    colors {
        # separator #666666
        # background #222222
        # statusline #dddddd
        # focused_workspace #0088CC #0088CC #ffffff
        # active_workspace #333333 #333333 #ffffff
        # inactive_workspace #333333 #333333 #888888
        # urgent_workspace #2f343a #900000 #ffffff
        background         $bg
        statusline         $fg_visible
        separator          $border_muted

        # focused workspace = white text, subtle border
        focused_workspace  $fg_visible   $bg   $fg_active
        # visible on another output = brighter gray
        active_workspace   $border_muted $bg   $fg_visible
        # inactive = muted gray
        inactive_workspace $border_muted $bg   $fg_inactive
        # urgent = soft red with white text
        urgent_workspace   $urgent       $bg   $fg_active
        binding_mode       $mode_orange  $bg   $bg
    }
}

